{{#each this}}
<article class="card-film">
    <img src="https://image.tmdb.org/t/p/w300/{{poster_path}}" alt="{{original_title}}" class="card-image" />

    <div class="card-content">
            <h2 class="card-title">{{original_title}}</h2>
            <p class="movie-name-details">Vote <span class="movie-details-vote">{{vote_average}}</span></p>
            <p class="movie-name-details">Votes <span class="movie-details-votes"> {{vote_count}}</span></p>
            <p class="movie-name-details">Popularity <span class="movie-details">{{popularity}}</span></p>
            <h3 class="movie-name-details">Original Title <span class="movie-details">{{original_title}}</span></h3>
            <ul class="tag-list">
                {{#each genres}}
                <li class="genres-item movie-name-details">Genre <span class="movie-details">{{this.name}}</span></li>
                {{/each}}
            </ul>
            <p class="movie-about">About <span class="movie-description">{{overview}}</span></p>
        <div>
            <button class="btn-watched">add to Watched</button>
            <button class="btn-queue">add to queue</button> 
        </div>
    </div>
    <button type="button" class="modal-button-close" data-modal-close>
        <svg width="30" height="30">
            <use href="./images/sprite.svg#icon-close-big"></use>
        </svg>
    </button>
</article>
{{/each}}