<article class="card-film">


    <div class="card-image">
    <img src="https://image.tmdb.org/t/p/w300/{{poster_path}}" alt="{{original_title}}" class="card-poster"/>
    </div>




    <div class="card-description">
    <h2 class="card-description-title">{{original_title}}</h2>
    
    <div class="card-description-content">
    <ul class="card-description-list-name">
        <li class="card-description-list-name-item">Vote / Votes</li>
        <li class="card-description-list-name-item">Popularity</li>
        <li class="card-description-list-name-item">Original title</li>
        <li class="card-description-list-name-item">Genre</li>
    </ul>

    <ul class="card-description-list-details"> 
        <li class="card-description-list-details-item">
            <span class="movie-rating filler">{{this.vote_average}}</span> /
            <span class="movie-vote-count filler">{{this.vote_count}}</span>
        </li>
        <li class="card-description-list-details-item">
            {{this.popularity}}
        </li>
        <li class="card-description-list-details-item">
            <span class="original-title">{{this.original_title}}</span>
        </li>
        <li class="card-description-list-details-item">
            {{#each this.genres}}
            {{name}}&nbsp;&nbsp;
            {{/each}}
        </li>
    </ul>
</div>

    <div class="movie-about">
        <p class="movie-about-title">About </p>
        <p class="movie-about-description">{{overview}}</p>
    </div>
        <div class="modal-btns">
        <button type="button" class="add-to-watched">add to watched</button>
        <button type="button" class="add-to-queue">add to queue</button> 
        </div>
<button type="button" class="modal-button-close" data-modal-close>
    {{!-- <svg>
        <use href="./images/sprite.svg#icon-close-big"></use>
    </svg> --}}
</button>
    
</div>
</article>


