{{#each this}}
<li class="list-item"  >
<article class="main-films" >
    {{#if poster_path}}
    <img class="film-image" src="https://image.tmdb.org/t/p/w300/{{poster_path}}" onerror="this.onerror=null;this.src='https://payload.cargocollective.com/1/23/758880/13104445/NO-MOVIE-POSTERS-02-03-003_2000_c.jpg'" alt="{{title}} {{name}}" data-action= '{{id}}' loading="lazy"/>
    {{else}}
    <img class="film-image" src="https://payload.cargocollective.com/1/23/758880/13104445/NO-MOVIE-POSTERS-02-03-003_2000_c.jpg" alt="{{title}} {{name}}"
        data-action='{{id}}' loading="lazy" />
        {{/if}}
  <div class="card-content">
    <h2 class="film-title">{{original_title}} {{name}}</h2>
    <div class="film-content">
    <p class="film-genre">{{genres}}</p>
        {{!-- <ul class="genres-list">
            {{#each genres}}
            <li class="film-genre">{{this.name}}</li>
            {{/each}}
        </ul> --}}
        <span class="delimiter">&#448;</span>
        <p class="film-date">{{release_date}}</p>
        <span class="film-vote-background visually-hidden"><p class="film-vote">{{vote_average}}</p></span>
    </div>
    </div>
</article>
</li>
{{/each}}